.info
  background #fff
  overflow hidden

.info__wrapper
  @extend .container
  display flex
  flex-direction row
  justify-content space-between
  padding 12px 0 88px 0

  +respond-to($medium)
    flex-direction column

  +respond-to($small)
    padding 64px 0 147px 0

  +respond-to($xsmall)
    padding 24px 0 48px 0

.info__proposals
  width 100%
  position relative
  border-radius 8px
  background: linear-gradient(136.34deg, #FF8744 11.35%, #FF295C 82.39%);
  padding 22px 28px 44px 28px
  box-shadow: 1px 1px 10px rgba(0, 0, 0, 0.1)
  box-sizing border-box
  z-index 2
  box-shadow 0 18px 37px -12px #ff295c

  +respond-to($xsmall)
    padding 16px 16px 21px 16px

.info__proposals-wrapper
  position relative
  padding-top 96px
  width 474px

  +respond-to($medium)
    margin-left: auto
    margin-right: auto
    order 2

  +respond-to($xsmall)
    width 100%
    padding-top 48px
    box-sizing border-box

  &:before
    content: ''
    position absolute
    width 379px
    height 397px
    background: url('images/svg/bg_top.svg') center no-repeat
    background-size cover
    left: -160px
    top: -55px

    +respond-to($xsmall)
      width 144px
      height 198px
      transform rotate(-50deg)
      left: -30px
      top: -15px

  &:after
    content: ''
    position absolute
    bottom -100px
    right -170px
    width 309px
    height 351px
    background: url('images/svg/bg_bottom.svg') center no-repeat
    background-size cover
    transform rotate(-10deg)

    +respond-to($medium)
      transform rotate(10deg)
      bottom: -150px
      right: -140px

    +respond-to($small)
      right: -118px


.info__proposals-title
  position relative
  font-size 24px
  line-height 32px
  font-weight 600
  color #fff
  padding-left 120px
  margin-bottom 28px

  +respond-to($xsmall)
    padding-left 74px
    margin-bottom 16px
    font-size 20px
    line-height 28px

.info__proposals-title-img
  width: 108px
  height: 111px
  position absolute
  left 0
  top -10px

  +respond-to($xsmall)
    width 64px
    height 64px
    top 0

.info__proposals-text
  font-size 16px
  line-height 1.3
  font-weight 300
  color #fff
  margin-bottom 16px

.info__proposals-form
  display flex
  flex-direction column

.info__proposals-form-input
  @extend .input
  margin-bottom 16px
  &:last-child
    margin-bottom 24px

.info__proposals-form-btn
  @extend .button-white
  width 100%
  margin-bottom 24px

  +respond-to($xsmall)
    padding 16px

.info__proposals-under-text
  font-size 14px
  line-height 1.3
  font-weight 300
  font-style italic
  color #fff
  text-align center

.info__numbers
  padding-top 96px
  width 530px

  +respond-to($medium)
    width 100%
    padding-top 64px
    margin-right auto
    margin-left auto

  +respond-to($small)
    padding-top 0

.info__numbers-items
  +respond-to($medium)
    display flex
    flex-direction row
    flex-wrap wrap

  +respond-to($xsmall)
    flex-direction column

.info__numbers-item
  position relative
  padding-left 84px
  margin-bottom 44px
  &:last-child
    margin-bottom 0

  +respond-to($medium)
    width 50%
    box-sizing border-box
    &:last-child
      margin-bottom 44px

  +respond-to($xsmall)
    width 100%
    box-sizing border-box
    margin-bottom 16px
    &:last-child
      margin-bottom 0

.info__numbers-title
  font-size 30px
  font-weight 600
  line-height 44px
  color #19082B
  margin-bottom 37px

  +respond-to($medium)
    text-align center

  +respond-to($xsmall)
    margin-bottom 24px

.info__numbers-icon
  height 64px
  width 64px
  position absolute
  left 0
  top 50%
  transform translateY(-50%)

.info__numbers-icon--smile
  height 158px
  width 63px

.info__numbers-number
  font-weight: bold
  line-height: 55px
  font-size: 42px
  color #198CFF
  background: -webkit-linear-gradient(#198CFF, #68B3FF);
  -webkit-text-fill-color: transparent;
  -webkit-background-clip: text
  margin-bottom 4px

  +respond-to($small)
    font-size 30px
    line-height 42px

.info__numbers-text
  font-size 18px
  line-height 1.2
  font-weight 700
