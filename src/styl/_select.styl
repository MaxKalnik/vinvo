.select-hidden
  display: none
  visibility: hidden
  padding-right: 10px

.select
  cursor: pointer
  display: inline-block
  position: relative
  font-size: 14px
  color: #525F66
  line-height: 24px
  font-weight: 300
  width: 100%
  height: 56px
  &:before,
  &:after
    content: ''
    position: absolute
    left: 50%
    transform translateX(-50%)
    bottom: -11px
    border: 4px solid transparent
    border-bottom: 6px solid #ffffff
    z-index 2
    transition border .25s
    visibility hidden

  &:before
    border-bottom: 6px solid #c0c4d1
    bottom: -9px

.select--first-hover
  &:after
    border-bottom 6px solid #f1f8ff

.select--active
  &:before,
  &:after
    visibility visible

.select
  .footer &
    &:after
      border-bottom: 6px solid #f3f8fa

.select-styled
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0
  padding: 16px 24px
  border-radius: 3px
  border: 1px solid #c0c4d1
  @include transition(all 0.25s)
  background: #fdfdfe
  font-size 16px

  +respond-to($xsmall)
    font-size 14px

  .form__fieldset-input-wrapper--offers-score &
    font-weight 500
    color #293033

  .footer &
    background: #f3f8fa
    &:after
      background: url(images/svg/triangle-dark.svg) center no-repeat

  &:focus
    border 1px solid #a8d5ff

  &:before
    content:""
    width: 14px
    height: 8px
    position: absolute
    top: 24px
    right: 16px
    transition: .25s
    background: url('images/icons/ic_expand.svg') center no-repeat

  &:after
    // content: ''
    width: 10px
    height: 7px
    position: absolute
    bottom: -10px
    left: 50%
    transform: translateX(-50%)
    background: url(images/svg/triangle.svg) center no-repeat
    display none
    z-index 2

  &:active, &.active
    border 1px solid #c0c4d1 !important
    &:before
      transform: rotate(-180deg)
    &:after
      display block

.select-options
  display: none
  position: absolute
  top: 65px
  right: 0
  left: 0
  margin: 0
  padding: 0
  list-style: none
  width: 100%
  border: 1px solid #c0c4d1
  border-radius: 3px
  box-sizing: border-box
  z-index: 1

  .select-item
    display: block
    font-size: 14px
    color: #525F66
    line-height: 32px
    font-weight: 300
    padding: 15px 16px 16px 16px
    font-size: 16px
    line-height: 24px
    transition: .25s
    border-bottom: 1px solid #c0c4d1
    background: #ffffff

    +respond-to($xsmall)
      font-size 14px
    .footer &
      background: #f3f8fa
    &:last-child
      border-bottom: none

    &:hover
      font-weight: 600
      background: #F1F8FF

    &[rel="hide"]
      display: none

    &:focus
      background: #F1F8FF

  li
    &:last-child
      border-bottom: none
      a
        border-bottom: none

  a
    display: block
    font-size: 14px
    color: #525F66
    line-height: 32px
    font-weight: 300
    padding: 12px 16px
    background: #F3F8FA
    font-size: 14px
    line-height: 24px
    transition: .25s
    border-bottom: 1px solid #c0c4d1

    &:hover
      font-weight: 600
      background: #F1F8FF

    &[rel="hide"]
      display: none

.form__fieldset-input-wrapper--long .select-options
  max-height: 400px
  overflow-y: scroll
