.best-price
  position relative
  background: linear-gradient(215.37deg, #632774 0.45%, #CB4272 100.73%, #CB4272 100.73%)
  display flex
  flex-direction column

.best-price__wrapper
  @extend .container
  padding 78px 450px 64px 0

  +respond-to($small)
    padding 44px 330px 44px 24px

  +respond-to($xsmall)
    padding 32px 0 0 0
    .section__title
      text-align center

.best-price__title
  font-weight: 600
  line-height: 52px
  font-size: 36px
  color: #fff
  text-align left

.best-price__text
  line-height: 30px
  font-size: 20px
  color: #fff
  font-weight 300
  text-align left
  margin 25px 0 45px 0

  +respond-to($small)
    margin 16px 0 24px 0

  +respond-to($xsmall)
    text-align center

.best-price__button
  @extend .button-white

  +respond-to($xsmall)
    margin-bottom 15px
    width 100%

.best-price__img
  position absolute
  right calc((100% - 1140px)/2)
  bottom 0

  +respond-from($large)
    right calc((100% - 1360px)/2)

  +respond-to($medium)
    right calc((100% - 936px)/2)

  +respond-to($small)
    right calc((100% - 720px)/2)
    width 390px
    height 418px

  +respond-to($xsmall)
    width 256px
    height 274px
    position static
    align-self center

